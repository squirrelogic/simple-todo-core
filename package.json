{
  "name": "simple-todo",
  "version": "0.1.0",
  "private": true,
  "description": "A modern todo application built with Next.js",
  "scripts": {
    "dev": "cd src && npm run dev",
    "build": "cd src && npm run build",
    "start": "cd src && npm run start",
    "lint": "cd src && npm run lint",
    "type-check": "cd src && npx tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "echo 'Documentation is in the docs/ directory'",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "docs:check": "find docs -name '*.md' -type f | wc -l"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "ts-jest": "^29.4.0"
  },
  "dependencies": {
    "next": "^15.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
